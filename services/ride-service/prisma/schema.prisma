generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ride {
  id              String     @id @default(uuid())
  driverId        String     @db.Uuid
  origin          String
  destination     String
  departure       DateTime
  seatsAvailable  Int
  price           Float
  isGirlsOnly     Boolean    @default(false)
  status          RideStatus @default(PENDING)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  isFromGIU       Boolean    @default(false)
  isToGIU         Boolean    @default(false)
  bookingDeadline DateTime?
  street          String?

  @@index([origin, destination])
  @@index([isFromGIU, isToGIU])
}

enum RideStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}
